#set($layout="/layout/layout-admin.vm")
#set($title="新增用户 - 用户管理")
<script type="text/javascript">
	$(document).ready(function() {
		var _url = "$ctx/admin/user/create.html";
		
		$("#user-form").submit(function(e) {
			e.preventDefault();
			jQuery.ajax({
				type: "POST",
				dataType: "json",
				url: _url,
				data: $("#user-form").serialize(),
				beforeSend: function() {
					fadeProgressModal(true);
				},
				success: function(result) {
					fadeProgressModal(false);

					if(result.success) {
						fadeSuccessModal(result);
						_url = "$ctx/admin/user/update-"+(result.bizData.biz_id)+".html";
						$("#form-opt-name").text("更新用户");
					} else {
						fadeFailureModal(result);
					}
				}
			});
		});
	});
</script>
<form id="user-form" class="form-horizontal" name="user-form" method="post">
	<div class="radius-block">
		<ul class="breadcrumb">
        	<li><span class="divider">/</span></li>
        	<li>后台管理</li>
			<li><span class="divider">/</span></li>
        	<li id="form-opt-name">新增用户</li>
        </ul>
		<div class="control-group">
			<label for="title"><span class="icon-chevron-right"></span><strong>用户名</strong>-必输项！</label>
			<input id="uname" name="uname" class="span12" type="text" required="required" />
		</div>
		<div class="control-group">
			<label for="title"><span class="icon-chevron-right"></span><strong>密码</strong>-必输项！</label>
			<input id="passwd" name="passwd" class="span12" type="password" required="required" />
		</div>
		<div class="control-group">
			<label for="title"><span class="icon-chevron-right"></span><strong>确认密码</strong>-必输项！</label>
			<input id="passwd2" name="passwd2" class="span12" type="password" required="required" />
		</div>
		<div class="control-group">
			<label for="title"><span class="icon-chevron-right"></span><strong>电子邮箱</strong>-必输项！</label>
			<input id="uemail" name="uemail" class="span12" type="email" required="required" placeholder="obullxl@gmail.com" />
		</div>
		<div class="pull-right">
			<button type="submit" class="btn btn-primary">提交保存</button>
		</div>
		<div class="clearfix"></div>
	</div>
</form>
