#set($layout="/layout/layout-admin.vm")
#set($title="主题管理")
<table class="table table-striped table-bordered table-hover uniform-background">
	<thead>
		<tr>
			<th class="span1"><div class="text-center">#</div></th>
			<th class="span2"><div class="text-center">状态</div></th>
			<th>标题</th>
			<th class="span3"><div class="text-center">更新时间</div></th>
			<th class="span2"><div class="text-center">操作</div></th>
		</tr>
	</thead>
	<tbody>
#set($PageList=$TopicXHelper.findPage())
#foreach($topic in $PageList.items)
		<tr>
			<td><div class="text-center">$topic.id</div></td>
            <td><div class="text-center #if($topic.state=='T') color-green #elseif($topic.state=='F') color-red #end">$EnumXHelper.toTopicStateEnum($topic.state).desp()</div></td>
			<td>[<a href="$ctx/admin/topic/manage-${topic.catg}-${page}.html">$EnumXHelper.toTopicCatgEnum($topic.catg).desp()</a>] <a href="$ctx/topic/${topic.catg}-${topic.id}.html" target="_blank">${topic.title}</a></td>
			<td><div class="text-center">$DateUtils.toStringDL($topic.gmtModify)</div></td>
			<td><div class="pull-right">
			#if($topic.catg == "album")
				<a href="$ctx/admin/album/update-${topic.id}.html">编辑</a>
			#else
				<a href="$ctx/admin/topic/update-${topic.id}.html">编辑</a>
			#end
				| <a href="$ctx/admin/topic/delete-${catg}-${page}-${topic.id}.html">删除</a>
			</div></td>
		</tr>
#end
	</tbody>
</table>
<div class="pagination pagination-right">
	<ul>
#set($pager=$PageList.pager)
#set($pages=$pager.getSlider(11))
	#foreach($idx in $pages)
		#if($pager.isDisabledPage($idx))
			<li class="active"><a href="javascript:void(0);">$idx</a></li>
		#else
			<li><a href="$ctx/admin/topic/manage-${catg}-${idx}.html">$idx</a></li>
		#end
	#end
	</ul>
</div>
