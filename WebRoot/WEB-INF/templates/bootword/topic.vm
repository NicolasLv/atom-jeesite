<style type="text/css">
.radius-block:after {
	content: "发表评论";
}
</style>
<div class="blog">
	<div class="container">
		<div class="row">
			<div class="span8">
				#showAds("itop")
#set($topic=$TopicXHelper.findDetail())
				<div class="entry">
					<h4>${topic.title}</h4>
					<p class="meta">
						<i class="icon-calendar"></i> $DateUtils.toStringDW($topic.gmtModify)
						- <i class="icon-user"></i>老牛啊
						- <i class="icon-film"></i>${topic.visit}
						- <i class="icon-comment"></i><a href="#respond">${topic.reply}</a>
					</p>
					<p>${topic.summary}</p>
					<p>${topic.content}</p>
				</div>
				#showAds("ibottom")
				<div class="comments">
					<ul class="commentlist">
#foreach($reply in $topic.replys)
						<li class="comment even thread-even depth-1" id="comment-${reply.id}">
							<div class="the-comment">
								<div class="avatar pull-left">
									<img src="http://www.gravatar.com/avatar/$MD5Utils.digest(${reply.uemail})?s=54" class="avatar avatar-54 photo" height="54" width="54" />
									<div class="clearfix"></div>
								</div>
								<div class="comment-box">
									<div class="comment-author meta">
#if($StringUtils.isBlank($reply.usite))
										<strong>${reply.uname}</strong>
#else
										<strong><a href="${reply.usite}" rel='external nofollow' class='url'>${reply.uname}</a></strong>
#end
										$DateUtils.toStringDL($reply.gmtModify)</a>
									</div>
									<div class="comment-text">
										<p>${reply.content}</p>
										<div class="clearfix"></div>
									</div>
								</div>
							</div>
						</li>
#end
					</ul>
				</div>
				<a name="respond"></a>
				<form id="reply-form" class="form-horizontal" name="reply-form" method="post" action="$ctx/topic/post-reply.html">
					<div class="radius-block">
						<div class="control-group">
							<label for="uname"><span class="icon-chevron-right"></span><strong>您的称呼</strong>-必输项！</label> <input id="uname" name="uname" type="text" required="required" placeholder="老牛啊" />
						</div>
                    	<div class="control-group">
                    		<label for="uemail"><span class="icon-chevron-right"></span><strong>您的电子邮箱</strong>-必输项，用于显示头像！</label> <input id="uemail" name="uemail" type="email" required="required" placeholder="obullxl@gmail.com" />
                    	</div>
                    	<div class="control-group">
                    		<label for="usite"><span class="icon-chevron-right"></span><strong>您的网站</strong>-非必输项，可以留空！</label> <input id="usite" name="usite" type="url" placeholder="http://www.somedomain.com" />
                    	</div>
						<div class="control-group">
							<label for="content"><span class="icon-chevron-right"></span><strong>您想说的话</strong>-必输项！</label>
							<textarea id="content" name="content" class="span7" rows="4" required="required" placeholder="请留下您的评论的内容……"></textarea>
						</div>
					</div>
					<input type="hidden" name="ufrom" id="ufrom" />
					<input type="hidden" name="topic" value="${topic.id}" />
					<input type="hidden" name="title" value="$topic.title}" />
					<div class="control-group radius-form-buttons">
						<button type="submit" class="btn btn-primary">发表评论</button>
					</div>
				</form>
			</div>
			<div class="span4">
				#parse("/$theme/inc/inc-slide.vm")
			</div>
		</div>
	</div>
</div>
<script type="text/javascript">
	$(document).ready(function() {
		$("#ufrom").val(window.location.href);
	});
</script>
