#if($StringUtils.isBlank($topic.mediaUrl))
<div class="entry">
	<h4>
		#if($top)[<span class="text-error">顶</span>]#end[<a href="$ctx/index-${topic.catg}-1.htm">$CatgWebX.findTitle($topic.catg)</a>] <a href="$ctx/topic/${topic.catg}-${topic.id}.htm" rel="bookmark">$topic.title</a>
